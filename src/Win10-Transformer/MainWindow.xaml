<Window x:Class="Win10_Transformer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Win10_Transformer.Core"
        mc:Ignorable="d"
        Title="Windows 10 Transformer" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Name="TweaksListView" Grid.Row="0">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                            </Expander.Header>
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsApplied, Mode=TwoWay}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Tweak" Width="200" DisplayMemberBinding="{Binding DisplayName}"/>
                    <GridViewColumn Header="Description" Width="500" DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveProfileButton" Content="Save Profile" Margin="5" Padding="10,5"/>
            <Button Name="LoadProfileButton" Content="Load Profile" Margin="5" Padding="10,5"/>
            <Button Name="CreateRestorePointButton" Content="Create Restore Point" Margin="5" Padding="10,5"/>
            <Button Name="ApplyButton" Content="Apply Selected" Margin="5" Padding="10,5"/>
            <Button Name="RevertButton" Content="Revert Selected" Margin="5" Padding="10,5"/>
            <Button Name="RestartExplorerButton" Content="Restart Explorer" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
